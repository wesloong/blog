{
  "name": "wesloong-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:cf": "wrangler pages dev .vercel/output/static --compatibility-date=2024-01-01",
    "build": "next build",
    "build:cf": "next build && npx @cloudflare/next-on-pages",
    "deploy": "npm run build:cf && wrangler pages deploy .vercel/output/static",
    "start": "next start",
    "lint": "next lint",
    "db:migrate": "wrangler d1 execute blog-db --file=./schema.sql",
    "db:seed": "wrangler d1 execute blog-db --file=./seed.sql",
    "db:init-admin": "node scripts/init-admin.js"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "^14.2.0",
    "@mui/material": "^5.16.7",
    "@mui/icons-material": "^5.16.7",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "bcryptjs": "^2.4.3",
    "react-markdown": "^9.0.1",
    "marked": "^11.1.1",
    "react-simplemde-editor": "^4.0.0",
    "easymde": "^2.18.0"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/bcryptjs": "^2.4.6",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "@cloudflare/next-on-pages": "^1.11.0",
    "wrangler": "^3.0.0"
  }
}

